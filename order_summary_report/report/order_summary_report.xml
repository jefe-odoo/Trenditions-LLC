<odoo>
    <!--Report Template-->
    <template id="template_order_summary_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center">
                            <h3><t t-esc="o.company_id.name"/></h3>
                            <h4> <span t-esc="o.name"/></h4>
                            <!--                            <td><strong>Start Date: </strong><t t-esc="o.date_from"/></td>-->
                            <!--                            - <td><strong>End Date: </strong><t t-esc="o.date_to" /></td>-->
                            <td><strong>Customer: </strong>
                                <t t-if="o.customer_ids">
                                    <span t-esc="', '.join(map(lambda x: (x.name), o.customer_ids))"/>
                                </t>
                                <t t-if="not o.customer_ids">
                                    All
                                </t>
                            </td>
                            <td>&amp;nbsp;|&amp;nbsp;</td>
                            <td><strong>Customer Reference: </strong>
                                <t t-if="o.customer_reference">
                                    <span t-esc="o.customer_reference"/>
                                </t>
                                <t t-if="not o.customer_reference">
                                    No Reference
                                </t></td>
                            <br/>
                            <tr><td></td></tr>
                        </div>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Item Id</th>
                                    <th>Location</th>
                                    <th >Item Description</th>
                                    <th>Product Category</th>
                                    <th style="text-align:right;">Qty Available</th>
                                    <th style="text-align:right;">PO Qty.</th>
                                    <th style="text-align:right;">Expected PO Arrival Date</th>
                                    <th style="text-align:right;">Order Qty.</th>
                                    <th style="text-align:right;">Order Amt.</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="not o.get_lines()">
                                    <tr>
                                        <td colspan="8">
                                            <b>No Record found for selected Filters.</b>
                                        </td>
                                    </tr>
                                </t>
                                <t t-foreach="o.get_lines()" t-as="l">
                                    <tr>
                                        <td><t t-esc="l['sku']"/></td>
                                        <td>
                                            <t t-esc="l['x_studio_bin_location_v']"/>
                                        </td>
                                        <td><t t-esc="l['name']"/></td>
                                        <td><t t-esc="l['category']"/></td>
                                        <td style="text-align:right;"><t t-esc="l['current_stock']"/></td>
                                        <td style="text-align:right;"><t t-esc="l['purchase_value']"/></td>
                                        <td style="text-align:right;"><t t-esc="l['expected_delivery_date']"/></td>
                                        <td style="text-align:right;"><t t-esc="l['sale_value']"/></td>
                                        <td style="text-align:right;"><t t-esc="l['sale_amount']"/></td>
                                    </tr>
                                </t>
                            </tbody>
                            <tr>
                                <td>
                                    <t t-set="total_amount" t-value="0"/>
                                    <t t-foreach="o.get_lines()" t-as="l">
                                        <t t-set="total_amount" t-value="total_amount+ l.get('sale_amount')" />
                                    </t>
                                </td>

                            </tr>
                        </table>
                        <div class="row">
                            <div class="col-6 text-muted">
                            </div>
                            <div class="col-6">
                                <span class="float-right text-right">
                                    <b>Total Order Amount: <t t-esc='"%.2f" %(total_amount)'/></b>
                                </span>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>


    <!--Report Paperformat-->
    <record id="paperformat_order_summary" model="report.paperformat">
        <field name="name">Trendition: Order Summary Layout</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">28</field>
        <field name="dpi">200</field>
    </record>

    <!--Report Menu-->
    <report
            id="report_order_summary"
            model="trendition.order.summary.report"
            string="Order Summary Report"
            report_type="qweb-pdf"
            name="order_summary_report.template_order_summary_report"
            file="order_summary_report.template_order_summary_report"
            paperformat="order_summary_report.paperformat_order_summary"
    />

</odoo>
